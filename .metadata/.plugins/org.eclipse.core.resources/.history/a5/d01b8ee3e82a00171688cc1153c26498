import java.io.*;
import java.net.*;

public class SimpleServer {

	/*
	 * 
	 * The main method will create a Java ServerSocket
	 * Pass an IP address and a port number 
	 * By default, the socket will use localhost:8080
	 * 
	 */
	public static void main(String[] args) throws UnknownHostException, IOException  {

		// Create ip and port variables, assign defaults
		String ip = "127.0.0.1";	
		int port = 8080;		

		
		// If arguments are passed, assign IP and port
		if (args.length != 0) 
		{
			ip = args[0];
			port = Integer.parseInt(args[1]);
		}
		
	
		// Create the socket using the IP and Port determined above
		ServerSocket mySocket = new ServerSocket(port);
		System.out.println("Server is using port: " + ip + ":" + port);
		
		
		// Wait for a connection
		Socket connection = mySocket.
		
				
	}
}


