import java.io.*;
import java.net.*;


public class Client {

	/*
	 * Simple client application creates a socket
	 * Binds to localhost:7070 by default
	 * Override by passing an ip and port as arguments
	 */
	public static void main(String[] args) throws UnknownHostException, IOException {

		
		// Default ip and port to be used
		String ip = "127.0.0.1";
		int port = 7070;
		
		
		// If arguments are passed, assign ip and port
		if (args.length != 0) 
		{
			ip = args[0];
			port = Integer.parseInt(args[1]);
		}
		
		
		// Create a client socket for connecting to the server)
		Socket clientSocket = new Socket(ip, port);
		
		
		// Create Buffered Reader to recieve user input
		BufferedReader inputCmd = new BufferedReader(new InputStreamReader(System.in));
		
		
		// Create a Print Stream to send user commands to the server
		PrintStream cmd = new PrintStream(clientSocket.getOutputStream());
		
		
