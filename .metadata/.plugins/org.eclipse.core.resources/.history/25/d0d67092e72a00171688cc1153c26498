import java.io.*;
import java.net.ServerSocket; 
import java.net.Socket;
import java.net.UnknownHostException;


public class SimpleServer {

	/*
	 * 
	 * The main method will create a Java Socket
	 * Pass an IP address and a port number 
	 * By default, the socket will use localhost:8080
	 * 
	 */
	public static void main(String[] args) throws UnknownHostException, IOException  {

		// Create ip and port variables, assign defaults
		String ip = "127.0.0.1";	
		int port = 8080;		

		
		// If arguments are passed, assign IP and port
		if (args.length != 0) 
		{
			ip = args[0];
			port = Integer.parseInt(args[1]);
		}
		
	
		// Create the socket using the IP and Port determined above
		Socket mySocket = new Socket(ip, port);
	
		
		
		//PrintWriter out = new PrintWriter(echoSocket.getOutputStream(), true);
		
		
		//ufferedReader in = new BufferedReader(new InputStreamReader(echoSocket.getInputStream()));
		
		
		//BufferedReader stdIn = new BufferedReader(new InputStreamReader(System.in))

				
	}
}


